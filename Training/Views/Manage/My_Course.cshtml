<div class="container-fluid">
    <div class="row justify-content-center">
        <!-- Căn giữa toàn bộ trang -->
        @if(role=="Student"){

             @Html.Partial("Sidebar")
        }
        <!-- Main Content -->
        <div class="col-md-10">
            <h4 class="mt-4">Danh sách khóa học</h4>
            <div class="d-flex justify-content-end mb-3">
                <a href="@Url.Action("Course", "Home")" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Đăng ký thêm
                </a>
            </div>

            <div class="table-container">
                <table class="table table-bordered text-center">
                    <thead class="thead-light">
                        <tr>
                            <th>Tên khóa học</th>
                            <th>Giảng viên</th>
                            <th style="width: 180px;">Ngày bắt đầu</th> <!-- tăng chiều rộng -->
                            <th style="width: 160px;">Hoạt động</th> <!-- tăng chiều rộng -->
                        </tr>
                    </thead>
                    @if (Model != null && Model.Any())
                    {
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>@course.Course.CourseName</td>
                                    <td>@course.Course.Lecture</td>
                                    <td>@course.Course.StartDate</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="@Url.Action("Details", "Home", new { id = course.CourseId })" class="btn btn-danger btn-sm">Xem</a>
                                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('@course.Course.CourseId')">Xóa</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    }
                    else
                    {
                        <tbody>
                            <tr><td colspan="4" class="text-center">Không có khóa học nào.</td></tr>
                        </tbody>
                    }
                </table>
            </div>

            <!-- Phân trang nếu cần -->
            <nav>
                <ul class="pagination justify-content-center">
                    <!-- Căn giữa phân trang -->
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function confirmDelete(courseId) {
        Swal.fire({
            title: 'Xác nhận',
            text: "Bạn có chắc muốn hủy đăng ký khóa học này?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Có',
            cancelButtonText: 'Không'
        }).then((result) => {
            if (result.isConfirmed) {
                // Gọi tới controller qua AJAX
                fetch('/Home/Delete_Registered', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ id: courseId })
                })
                .then(response => response.json())
                .then(data => {
                    Swal.fire({
                        title: data.success ? 'Thành công' : 'Không thể hủy',
                        text: data.message,
                        icon: data.success ? 'success' : 'error',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        if (data.success) {
                            // Nếu xóa thành công thì reload lại trang hoặc load danh sách mới
                            location.reload();
                        }
                    });
                })
                .catch(() => {
                    Swal.fire({
                        title: 'Lỗi!',
                        text: 'Có lỗi xảy ra, vui lòng thử lại.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                });
            }
        });
    }
</script>


