@model IEnumerable<Training.Models.Course_RegisteredModel>
@{
    ViewBag.Title = "Dashboard";
    Layout = null;
    var courseNames = Model.Select(m => m.NameCourse).ToList();
    var studentCounts = Model.Select(m => m.count).ToList();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Thống kê học viên</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/Sidebar.css" rel="stylesheet" />
    <style>
        .layout-wrapper {
            display: flex;
            justify-content: center; /* Căn giữa layout */
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .main-content {
            flex: 1;
            padding: 100px 30px 30px 30px;
            overflow-x: auto;
        }

        .chart-container {
            width: 60%; /* Thu hẹp biểu đồ */
            max-width: 600px; /* Giới hạn chiều rộng tối đa */
            height: 500px;
            margin: 0 auto; /* Căn giữa */
        }



    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
</head>
<body>

    <!-- TOPBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-3 topbar">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold text-dark">Admin Panel</span>
            <div class="d-flex align-items-center">
                <a href="#" class="text-dark me-3">
                    <i class="bi bi-person-circle fs-4"></i>
                </a>
                <a href="#" class="text-dark">
                    <i class="bi bi-gear-fill fs-4"></i>
                </a>
            </div>
        </div>
    </nav>

    <div class="layout-wrapper">
        <!-- SIDEBAR -->
        <div class="sidebar">
            @Html.Partial("Sidebar_Admin")
        </div>

        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="card">
                <div class="card-header">
                    <strong>Thống kê học viên theo khóa học</strong>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="StudentChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var ctx = document.getElementById("StudentChart").getContext("2d");
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(courseNames)),
                datasets: [{
                    label: 'Số lượng học viên',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(studentCounts)),
                    backgroundColor: 'rgba(75, 192, 192, 0.5)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            stepSize: 1
                        }
                    }]
                }
            }
        });
    </script>

</body>
</html>
