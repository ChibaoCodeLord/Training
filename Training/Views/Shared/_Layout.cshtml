<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Training Center</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Custom.css" />
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    @* <link href="https://fonts.googleapis.com/css2?family=Oxygen&display=swap" rel="stylesheet"> *@

</head>
<body>
    <header class="main-header">
        <nav class="navbar container">
            <div class="logo-title">
                <div class="logo">

                </div>
                <div class="hero-text">Chibao</div>
            </div>
            <ul class="nav-links">
                <li><a class="@(ViewBag.Title == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a class="@(ViewBag.Title == "About" ? "active" : "")" href="@Url.Action("About", "Home")">About</a></li>
                <li><a class="@(ViewBag.Title == "Course" ? "active" : "")" href="@Url.Action("Course", "Home")">Course</a></li>
                <li><a class="@(ViewBag.Title == "Contact" ? "active" : "")" href="@Url.Action("Contact", "Home")">Contact</a></li>
            </ul>
            <div class="auth-buttons">
                <a href="@Url.Action("SignIn", "Account")" class="btn btn-outline-dark">Sign In</a>
                <a href="@Url.Action("SignUp", "Account")" class="btn btn-dark">Sign Up</a>
            </div>
        </nav>
    </header>
    <style>
        .auth-buttons a {
            transition: transform 0.3s ease;
        }

            .auth-buttons a:hover {
                transform: scale(1.1);
            }
    </style>
    <main class="container mt-5">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)

</body>
</html>